<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Script pour afficher les alertes -->
<script>
    function showAlert(icon, title, message) {
        Swal.fire({
            icon: icon,
            title: title,
            text: message
        });
    }
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = '@(TempData["action"])';

        if (successMessage == "Ajouter") {
            showAlert('success', 'Succès', "La publication est crée avec succés");
        }
        else if (successMessage == "Modifier") {
            showAlert('success', 'Succès', "La publication est modifiée avec succés");
        }
        else if (successMessage == "Supprimer") {
            showAlert('success', 'Succès', "La publication est supprimée avec succés");
        }
    });

    document.addEventListener("DOMContentLoaded", function () {
        var btnAfficherPlus = document.getElementById('btnAfficherPlus');
        var publicationsCachees = document.querySelectorAll('.publication.hide');

        btnAfficherPlus.addEventListener('click', function () {
            publicationsCachees.forEach(function (publication) {
                publication.classList.toggle('hide');
            });

            if (btnAfficherPlus.textContent === "Afficher plus") {
                btnAfficherPlus.textContent = "Afficher moins";
            } else {
                btnAfficherPlus.textContent = "Afficher plus";
            }
        });
    });
</script>