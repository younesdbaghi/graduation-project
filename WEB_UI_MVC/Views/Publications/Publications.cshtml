<div class="container main-content">
    <main role="main" class="pb-3">
        @if (Model.Utilisateur.Admin == "YES" || Model.Utilisateur.Admin == "CDP")
        {
            <h1 class="text-center mb-4">Liste des <span class="text-primary">publications</span></h1>
            <p class="text-center">
                <a class="btn btn-primary w-100 mt-3" asp-action="Ajouter">Ajouter une nouvelle publication</a>
            </p>
        }
        else
        {
            <h1 class="text-center mb-4">Liste des <span class="text-primary">publications</span></h1>
        }

        @if (Model.Publications.Count != 0)
        {
            @foreach (var item in Model.Publications)
            {
                <div class="row my-3 publication @(Model.Publications.IndexOf(item) >= 6 ? "hide" : "")">
                    <div class="col-md-12">
                        <div class="card" style="border-radius: 15px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                            <div class="card-body">
                                <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Title)</h5>
                                <p class="card-text text-center">@Html.DisplayFor(modelItem => item.Description)</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-primary">@item.Date.ToString("dd/MM/yyyy")</small>
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Heure)</small>
                                    @if (Model.Utilisateur.Admin == "CDP" || Model.Utilisateur.Admin == "YES")
                                    {
                                        <div class="btn-group">
                                            <a href="@Url.Action("Modifier", new { id = item.Id })" class="btn btn-sm btn-outline-secondary me-2" title="Modifier"><i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("Supprimer", new { id = item.Id })" class="btn btn-sm btn-outline-danger" title="Supprimer"><i class="fas fa-trash-alt"></i></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.Publications.Count > 6)
            {
                <button id="btnAfficherPlus" class="btn d-block mx-auto btn-primary mt-3">Afficher plus</button>
            }
        }
        else
        {
            <p class="text-center">Aucune publication publiée.</p>
        }
    </main>
</div>




