<div class="container main-content">
    <main role="main" class="pb-3">
        <h1 class="text-center mb-4">Changer votre <span class="text-primary">mot de passe</span></h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center"><i class="fas fa-key me-2"></i>Changer le mot de passe</h4>
                        <hr />
                        <form asp-action="Changer_Le_MDP">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group mb-3">
                                <input asp-for="@Model.User.Id" class="form-control" style="display:none" readonly />
                            </div>
                            <div class="form-group mb-3">
                                <label for="password" class="form-label"><i class="fas fa-lock me-2"></i>Nouveau mot de passe</label>
                                <input id="password" asp-for="@Model.User.Password" value="" class="form-control" placeholder="Nouveau mot de passe" />
                                <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
                            </div>
                            <div style="display:none">
                                <input asp-for="@Model.User.Name" class="form-control" />
                           
                                <input asp-for="@Model.User.LastName" class="form-control" />
                            
                                <input asp-for="@Model.User.Username" class="form-control" />
                           
                                <input asp-for="@Model.User.Email" class="form-control" />
                            
                                <input asp-for="@Model.User.Activity" class="form-control" />
                            
                                <select asp-for="@Model.User.Admin" class="form-control">
                                    <option value="">-- Sélectionner le type --</option>
                                    <option value="YES">YES</option>
                                    <option value="CDP">CDP</option>
                                    <option value="NO">NO</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-save"></i> Enregistrer les modifications</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>



