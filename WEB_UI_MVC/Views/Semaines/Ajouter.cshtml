@model WEB_UI_MVC.ViewModels.SemainesViewModel

@{
    ViewData["Title_P1"] = "OMNI-PM";
    ViewData["Title_P2"] = "Ajouter une semaine";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-light box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Accueil" asp-action="Index">
                <img src="~/images/OMNI-PM.png" style="width:160px" alt="omnipm_img" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Publications" asp-action="Publications">Nouveautés</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Semaines" asp-action="Semaines">Semaines</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <img src="~/images/USER.jpg" style="width:28px; border-radius:100px;" alt="user_img">
                        </a>
                        <ul class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
                            <li>
                                Mr/Mme. <span class="text-primary">@Model.Utilisateur.Name</span>
                            </li>
                            <li><a asp-area="" asp-controller="Password" asp-action="Changer_Le_MDP" asp-route-id="@Model.Utilisateur.Id" class="dropdown-item" style="color: #003D99;">Modifier MDP</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a asp-area="" asp-controller="Auth" asp-action="Logout_Traitement" class="dropdown-item" style="color: #ff0000;">Se déconnecter</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container main-content">
    <main role="main" class="pb-3">
        <h1 class="card-title text-center mb-4">Ajouter une nouvelle <span class="text-primary">semaine</span></h1>
        <div class="card mt-5 mx-auto" style="max-width: 500px;">
            <div class="card-body">
                <h4 class="card-subtitle mb-4 text-center">Semaine</h4>
                <form asp-action="Ajouter">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="@Model.Semaine.WeekNumber" class="form-label"><i class="fas fa-calendar-week me-2"></i> Numéro de semaine</label>
                        <select asp-for="@Model.Semaine.WeekNumber" class="form-control" id="weekNumber" placeholder="Sélectionnez le numéro de semaine"></select>
                        <span asp-validation-for="@Model.Semaine.WeekNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.S_Projet.ProjectName" class="form-label"><i class="fas fa-project-diagram me-2"></i> Nom du projet</label>
                        <select id="projetSelect" asp-for="@Model.S_Projet.ProjectName" class="form-control" placeholder="Sélectionnez un projet">
                            <option value="">-- Sélectionner un projet --</option>
                            @foreach (var projet in Model.Projets)
                            {
                                <option id="@projet.Id" value="@projet.ProjectName">@projet.ProjectName</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.S_Projet.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.S_Projet.Quotation" class="form-label"><i class="fas fa-list-alt me-2"></i> Quotation</label>
                        <select id="quotationSelect" asp-for="@Model.S_Projet.Quotation" class="form-control" placeholder="Sélectionnez une quotation"></select>
                        <span asp-validation-for="@Model.S_Projet.Quotation" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppMonday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Lundi</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppMonday" class="form-control" placeholder="Entrez le nombre d'heure travaillées lundi" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppMonday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppTuesday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Mardi</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppTuesday" class="form-control" placeholder="Entrez le nombre d'heure travaillées mardi" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppTuesday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppWednesday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Mercredi</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppWednesday" class="form-control" placeholder="Entrez le nombre d'heure travaillées mercredi" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppWednesday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppThursday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Jeudi</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppThursday" class="form-control" placeholder="Entrez le nombre d'heure travaillées jeudi" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppThursday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppFriday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Vendredi</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppFriday" class="form-control" placeholder="Entrez le nombre d'heure travaillées vendredi" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppFriday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppSaturday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Samedi</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppSaturday" class="form-control" placeholder="Entrez le nombre d'heure travaillées samedi" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppSaturday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.S_Projet.NoAppSunday" class="control-label"><i class="fas fa-calendar-day me-2"></i>Dimanche</label>
                        <input type="number" asp-for="@Model.S_Projet.NoAppSunday" class="form-control" placeholder="Entrez le nombre d'heure travaillées dimanche" required>
                        <span asp-validation-for="@Model.S_Projet.NoAppSunday" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="@Model.Semaine.UserId" value="@Model.Semaine.UserId" class="form-control" style="display:none" readonly />
                    </div>

                    <div class="form-group">
                        <input asp-for="@Model.Semaine.Id" value="@Model.Semaine.Id" class="form-control" style="display:none" readonly />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Ajouter la semaine" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Semaines" class="btn btn-secondary"><i class="fas fa-list me-2"></i> Retourner à la liste</a>
        </div>
    </main>
</div>


<footer class="footer text-muted">
    <div class="container text-center">
        &copy; 1989-<span id="currentYear"></span>, <span class="text-primary">OMNI-PM</span>
    </div>
</footer>

               
<script src="~/js/AddUpdateWeekOrProject.js"></script>