@model WEB_UI_MVC.ViewModels.UsersViewModel

@{
    ViewData["Title_P1"] = "OMNI-PM-ADMIN";
    ViewData["Title_P2"] = "Ajouter un utilisateur";
}


<header>
    <nav class="navbar navbar-expand-sm navbar-light box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Accueil" asp-action="Index">
                <img src="~/images/ADMIN.png" style="width:160px" alt="omniadmin_img">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="TDB" asp-action="Projets">TDB</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Utilisateurs" asp-action="Utilisateurs">Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Projets" asp-action="Projets">Projets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Publications" asp-action="Publications">Publications</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <img src="~/images/USER.jpg" style="width:28px; border-radius:100px;" alt="user_img">
                        </a>
                        <ul class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
                            <li>
                                Mr/Mme. <span class="text-primary">@Model.Utilisateur.Name</span>
                            </li>
                            <li><a asp-area="" asp-controller="Password" asp-action="Changer_Le_MDP" asp-route-id="@Model.Utilisateur.Id" class="dropdown-item" style="color: #003D99;">Modifier MDP</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="dropdown-item" style="color: #ff0000;">Se déconnecter</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container main-content">
    <main role="main" class="pb-3">
        <h1 class="text-center mb-4">Ajouter un nouveau <span class="text-primary">utilisateur</span></h1>

        <div class="card mt-5 mx-auto" style="max-width: 500px;">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Nouveau utilisateur <i class="fas fa-user-plus"></i></h4>

                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Ajouter">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.Name" class="control-label"></label>
                                <input asp-for="@Model.User.Name" class="form-control" placeholder="Entrez le nom" required />
                                <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.LastName" class="control-label"></label>
                                <input asp-for="@Model.User.LastName" class="form-control" placeholder="Entrez le prénom" required />
                                <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.Username" class="control-label"></label>
                                <input asp-for="@Model.User.Username" class="form-control" placeholder="Entrez le nom d'utilisateur" required />
                                <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.Email" class="control-label"></label>
                                <input asp-for="@Model.User.Email" class="form-control" placeholder="Entrez l'adresse email" required />
                                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.Password" class="control-label"></label>
                                <input asp-for="@Model.User.Password" class="form-control" placeholder="Entrez le mot de passe" required />
                                <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.Activity" class="control-label"></label>
                                <input asp-for="@Model.User.Activity" class="form-control" placeholder="Entrez l'activité" required />
                                <span asp-validation-for="@Model.User.Activity" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.User.Admin" class="control-label">Admin</label>
                                <select asp-for="@Model.User.Admin" class="form-control">
                                    <option value="">-- Sélectionner le type --</option>
                                    <option value="YES">YES</option>
                                    <option value="CDP">CDP</option>
                                    <option value="NO">NO</option>
                                </select>
                                <span asp-validation-for="@Model.User.Admin" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-plus"></i> Ajouter</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Utilisateurs" class="btn btn-secondary"><i class="fas fa-list"></i> Retour à la liste des utilisateurs</a>
        </div>
    </main>
</div>


<footer class="border-top footer bg-teritory box-shadow text-muted">
    <div class="container text-center">
        &copy; 1989-<span id="currentYear"></span>, <span class="text-primary">OMNI-PM</span>
    </div>
</footer>